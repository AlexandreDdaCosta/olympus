{
  "argon2":
  {
    "memory_cost" : 65536,
    "parallelism" : 1,
    "salt_bytes" : 16,
    "time_cost" : 3
  },
  "log":
  {
    "dir": "/var/log/node",
    "access": "/var/log/node/access.log",
    "access_auth": "/var/log/node/authaccess.log",
    "error": "/var/log/node/error.log",
    "error_auth": "/var/log/node/autherror.log"
  },
  "mongodb":
  {
    "collection_auth_users": "auth_users",
    "database_auth": "admin",
    "database_default": "user_node",
    "host": "127.0.0.1",
    "password_file": "/home/node/etc/mongodb_password",
    "port": 27017,
    "user": "node"
  },
  "pid":
  {
    "file": "/var/run/node.pid",
    "file_auth": "/var/run/nodeauth.pid"
  },
  "restapi":
  {
    "access_token_secret_file": "/home/node/etc/access_token_secret",
    "password_file": "/home/node/etc/restapi_password",
    "refresh_token_secret_file": "/home/node/etc/refresh_token_secret"
  },
  "server":
  {
    "host": "127.0.0.1",
    "port" : 8889,
    "token_port" : 8888
  }
}
