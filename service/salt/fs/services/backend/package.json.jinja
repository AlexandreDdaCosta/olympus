{
    "dependencies": {
{%- for packagename, package in pillar.get('npm-packages', {}).items() -%}
      "{{ packagename }}": "{{ package['version'] }}",
{% endfor %}
{%- for packagename, package in pillar.get('backend-npm-packages', {}).items() -%}
      {%- if 'last_entry' in package and package['last_entry'] %}
      "{{ packagename }}": "{{ package['version'] }}"
      {%- else %}
      "{{ packagename }}": "{{ package['version'] }}",
      {%- endif -%}
{% endfor %}
    },
    "devDependencies": {
{%- for packagename, package in pillar.get('npm-dev-packages', {}).items() -%}
      {%- if 'last_entry' in package and package['last_entry'] %}
      "{{ packagename }}": "{{ package['version'] }}"
      {%- else %}
      "{{ packagename }}": "{{ package['version'] }}",
      {%- endif -%}
{% endfor %}
    },
    "main": "app.js",
    "name": "restapi",
    "scripts": {
        "test": "jest"
    },
    "version": "{{ pillar['backend-version'] }}"
}
