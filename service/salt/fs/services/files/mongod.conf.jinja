# mongod.conf

# For documentation of all options, see:
# http://docs.mongodb.org/manual/reference/configuration-options/

# where and how to store data
storage:
  dbPath: /var/lib/mongodb
  journal:
    enabled: true

# where to write logging data
systemLog:
  destination: file
  logAppend: true
  path: /var/log/mongodb/mongod.log
  component:
    accessControl:
      verbosity: 2
    index:
      verbosity: 1
    network:
      verbosity: 2
    write:
      verbosity: 1

# network interfaces
net:
  bindIp: 127.0.0.1
  port: 27017
{% if certs_available is sameas true %} tls:
    mode: allowTLS
    certificateKeyFile: /etc/ssl/localcerts/server-key-crt.pem
    CAFile: /etc/ssl/localcerts/ca-crt.pem
{% endif %}
# processManagement
{% if auth_enabled is sameas true -%}
security:
  authorization: enabled
{% else -%}
security:
  authorization: disabled
{% endif %}
